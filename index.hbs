{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}

{{! The main content area on the homepage }}
<div id="content-main">

    {{! Each post will be output using this markup }}
    {{#foreach posts}}

    <article class="{{post_class}}">
        <header class="post-header">
            <h2 class="post-title"><a href="{{url}}">{{title}}</a></h2>
            <span class="post-meta"><time datetime="{{date format='YYYY-MM-DD'}}">{{date format="MMMM D, YYYY"}}</time> {{#if tags}} | Tags: {{tags}}{{/if}}</span>
            
            </br>
            {{#primary_author}}
              <span class="post-meta">Written by <a href="{{url}}" style="color: #4183c4">{{name}}</a> {{#if location}} | {{location}} {{/if}}</span>
            {{/primary_author}}

        </header>
        <section class="post-content">
            <p>{{content}}</p>
        </section>
    </article>

    {{/foreach}}

    {{pagination}}

</div>
